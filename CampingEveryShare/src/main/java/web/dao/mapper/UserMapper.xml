<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="web.dao.face.UserDao">
	<select id="selectCntUser" resultType="int" parameterType="UserTb">
	SELECT count(*) FROM userTb
	<where>
		AND user_id = #{userId}
		AND user_pw = #{userPw}
	</where>
	</select>

	<select id="selectNickById" resultType="string" parameterType="UserTb">
		SELECT user_nick FROM usertb
		<where>
			AND user_id = #{userId}
		</where>
	</select>	
</mapper>